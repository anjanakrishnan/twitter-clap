<% if user_signed_in? %>
  <% if current_user.company_id.nil? %>
    Signed in as <%= current_user.name %>. Not you?
    <%= form_for (@company) do |f| %>
      <%= f.label :name, "Company Name" %>
      <%= f.text_field :name, class: "form-control" %>
    <%= form_for (@user) do |f| %>
      <%= f.label :user_email, "Email Id" %>
      <%= f.text_field :user_email, class: "form-control" %>
      <%= f.hidden_field :role, value: "admin" %>
      <%= f.submit "OK", class: 'btn btn-primary' %>
    <% end %>
    <% end %>
  <% else %>
    <%= render 'dashboard'%>
  <% end %>
<% else %>
 
  <%= link_to "Sign in via Twitter", user_twitter_omniauth_authorize_path %>  or 
  <%= link_to "Sign up with Twitter", user_twitter_omniauth_authorize_path %>
<% end %>